<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.project.dao.mdDAO">
	<select id="md_listDao" resultType="com.springboot.project.dto.mdDTO">
		select * from md order by md_no desc	 	
	</select>
	<select id="md_viewDao" resultType="com.springboot.project.dto.mdDTO">
		select * from md where md_no=#{param1} 	
	</select>
	<insert id="md_writeDao">
		insert into md(md_no,md_category,md_title,md_upload,md_start,md_end,md_memo)
		 values(md_seq.nextval,'이달의 MD 추천대사',#{md_title},#{md_upload},#{md_start},#{md_end},#{md_memo})
	</insert>
	<update id="md_updateDao">
         update md set md_title=#{md_title},md_upload=#{md_upload},md_start=#{md_start},md_end=#{md_end},md_memo=#{md_memo} 
          where md_no=#{md_no}
	</update>
	<delete id="md_deleteDao">
		delete from md where md_no=#{param1}
	</delete>
	</mapper>